<h1>User Activation</h1>
<p id="notice"><%= notice %></p>

<table class="table">
  <thead>
    <tr>
      <th>Email</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.active.nil? ? false : user.active %></td>
        <td>
          <% if user.active.nil? || user.active == false %>
            <%= link_to 'Activate', activate_user_setting_path(user.id), class: "btn btn-success btn-xs" %>
          <% else %>
            <%= link_to 'De-Activate', dectivate_user_setting_path(user.id), class: "btn btn-danger btn-xs" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

